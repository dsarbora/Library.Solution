@using Library.Models;

@{
    Layout="_Layout";
}
<div class="header">
    <h1 class="title">Books</h1>
    <hr>
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
        <p><a href="/">Go home</a></p>
        <p><a href="/books/new">Add new book</a></p>
    </div>
    <div class="col-md-4">
        @if(Model.Count == 0)
        {
            <div class="center">
                <p>No books yet</p>
            </div>
        }
        @if(Model.Count != 0)
        {
            <div class="left">
                <h4>Book</h4>
            </div>
            <div class="right">
                <h4>Author</h4>
            </div>
            <div class="book">
                @foreach(Book book in Model)
                {
                    <p><a href="/books/@book.GetId()">@book.GetTitle()</a></p>
                }
            </div>
        }
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
</div>
