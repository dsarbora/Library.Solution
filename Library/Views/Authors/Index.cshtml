@using Library.Models;
<h1>Authors</h1>
@if(Model.Count == 0)
{
    <p>No authors yet</p>
}
@if(Model.Count != 0)
{
    @foreach(Author author in Model)
    {
        <p><a href="/authors/@author.GetId()">@author.GetName()</a></p>
    }
}
<a href="/">Go home</a>
<a href="/authors/new">Add new author</a>