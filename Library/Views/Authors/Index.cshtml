@using Library.Models;
@{
    Layout="_Layout";
}
<div class="header">
    <h1 class="title">Authors</h1>
    <hr>
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
        <p><a href="/">Go home</a></p>
        <p><a href="/authors/new">Add new author</a></p>
    </div>
    <div class="col-md-4 center">
        @if(Model.Count == 0)
        {
                <p>No authors yet</p>
        }
        @if(Model.Count != 0)
        {
            @foreach(Author author in Model)
            {
                <p><a href="/authors/@author.GetId()">@author.GetName()</a></p>
            }
        }
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
</div>